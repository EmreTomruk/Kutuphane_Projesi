@model BooksWebApp.Models.Kitap

@{
    ViewData["Title"] = "KitapEkle";
}

<h3 class="text-white">Kitap Ekle</h3><br />

@*<hr />*@
<div class="row text-info">
    <div class="col-md-4">
        <form asp-action="KitapEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KitapAdi" class="control-label">Kitap Adı</label>
                <input asp-for="KitapAdi" class="form-control" placeholder="Kitap Adı"/>
                <span asp-validation-for="KitapAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YazarID" class="control-label">Yazar</label>
                <select asp-for="YazarID" class="form-control" asp-items="ViewBag.YazarID"></select>
            </div>
            <div class="form-group">
                <label asp-for="YayinEviID" class="control-label">Yayın Evi</label>
                <select asp-for="YayinEviID" class="form-control" asp-items="ViewBag.YayinEviID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SayfaSayisi" class="control-label">Sayfa Sayısı</label>
                <input asp-for="SayfaSayisi" class="form-control" />
                <span asp-validation-for="SayfaSayisi" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="OduncDurumu" /> @Html.DisplayNameFor(model => model.OduncDurumu)
                    </label>
                </div>*@
            <div class="form-group">
                <label asp-for="Ozet" class="control-label">Özet</label>
                <input asp-for="Ozet" class="form-control" type="text" placeholder="Özet"/>
                <span asp-validation-for="Ozet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KapakResmi" class="control-label">Kapak Resmi</label>
                <input asp-for="KapakResmi" class="form-control" placeholder="Kapak Resmi" />
                <span asp-validation-for="KapakResmi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaskiNo" class="control-label">Baskı No</label>
                <input asp-for="BaskiNo" class="form-control" />
                <span asp-validation-for="BaskiNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasimTarihi" class="control-label">Basım Tarihi</label>
                <input asp-for="BasimTarihi" class="form-control" />
                <span asp-validation-for="BasimTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KayitTarihi" class="control-label">Kayıt Tarihi</label>
                <input asp-for="KayitTarihi" class="form-control" type="date" value="@String.Format("{0:yyyy-MM-dd}", DateTime.Now)" />
                <span asp-validation-for="KayitTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
